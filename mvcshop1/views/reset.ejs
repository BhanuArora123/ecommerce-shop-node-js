<%- include("./layouts/head.ejs") %>
<body>
    <%- include("./layouts/nav.ejs") %>
    <% if(errorMessage){ %>
      <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-center" role="alert">
        <%= errorMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } else if(successMessage){ %>
      <div class="alert alert-success alert-dismissible fade show d-flex justify-content-center" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <div class="container w-100 d-flex flex-column justify-content-evenly align-items-center loginBox">
        <form class="w-75 h-75 mt-20" action="/reset" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="row mb-3">
              <label for="emailId" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                <input type="email" class="form-control" id="emailId" name="email">
              </div>
            </div>
            <button type="submit" class="btn btn-success">Reset Password</button>
          </form>
    </div>
    <%- include("./layouts/end.ejs") %>
</body>
